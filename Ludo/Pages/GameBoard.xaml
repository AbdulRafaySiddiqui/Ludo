                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="6"/>

            <!--#endregion-->

            <!--#region Yellow Path-->
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="6"
                    Grid.Row="13"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="13"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="12"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="11"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="10"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="9"/>
            <Border Background="Yellow"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="8"/>


            <!--#endregion-->

            <!--#region Border-->
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="7"/>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="6"/>
