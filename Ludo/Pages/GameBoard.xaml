                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="5"
                    Grid.Row="7"/>
            <Border Background="Red"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="6"
                    Grid.Row="7"/>

            <!--#endregion-->

            <!--#region Green Path-->
            <Border Background="Green"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="13"
                    Grid.Row="8"/>
