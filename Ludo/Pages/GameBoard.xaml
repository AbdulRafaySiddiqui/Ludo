<Page x:Class="Ludo.GameBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ludo"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="GameBoard">

    <DockPanel x:Name="mainGrid">
        <Viewbox>
            
        <Grid DockPanel.Dock="Left">
            
        <!--Game board-->
        <Grid 
              x:Name="gameBoard"
              Width="{Binding Height,ElementName=PathGrid}"
              Height="{Binding Height,ElementName=PathGrid}"
              HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--#region Player blocks-->
            <!--Red Player-->
            <Border Background="Red"
                    Grid.Column="0"
                    Grid.ColumnSpan="6" Grid.RowSpan="6"/>

            <!--Blue Player-->
            <Border Background="Blue"
                    Grid.Column="9"
                    Grid.ColumnSpan="6" Grid.RowSpan="6"/>

            <!--Yellow Player-->
            <Border Background="Yellow"
                    Grid.Column="0"
                    Grid.Row="9"
                    Grid.ColumnSpan="6" Grid.RowSpan="6"/>

            <!--Green Player-->
            <Border Background="Green"
                    Grid.Column="9"
                    Grid.Row="9"
                    Grid.ColumnSpan="6" Grid.RowSpan="6"/>

            <!--#endregion-->

            <!--#region Home-->
            <Border Background="DarkGray"
                    Grid.Column="6"
                    Grid.Row="6"
                    Grid.ColumnSpan="3"
                    Grid.RowSpan="3"/>
            <!--#endregion-->

            <!--#region Red Path-->
            <Border Background="Red"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="1"
                    Grid.Row="6"/>
            <Border Background="Red"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="1"
                    Grid.Row="7"/>
            <Border Background="Red"
                    BorderBrush="Black"
                    BorderThickness="1"
