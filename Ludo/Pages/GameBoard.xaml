                    Grid.Column="1"
                    Grid.Row="8"/>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="8"/>
            <!--#endregion-->

        </Grid>

        <!--Piece path-->
        <Grid 
              x:Name="PathGrid"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        </Grid>

        </Grid>        
        </Viewbox>
        <Viewbox>
            
        <StackPanel DockPanel.Dock="Right">
            <Viewbox Height="100">
                <TextBlock Text="{Binding AlertText}"
                           Foreground="Red"
                           Margin="10"
                           FontSize="25"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Viewbox>
            <TextBlock Text="{Binding PlayerTurn}"
                       Margin="10"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <Button Margin="30 60 30 0"
                    Background="LightGray"
                    Width="150"
                    Height="150"
                    Style="{StaticResource DiceButton}"
                    >
                    <Viewbox>
                        <TextBlock Text="{Binding DiceText}" Margin="10 0"/>
                    </Viewbox>
            </Button>
            <ItemsControl ItemsSource="{Binding Dice }"
                          Height="40"
                          Margin="50 20 50 20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="30"
                                   Foreground="Brown"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Style="{StaticResource DiceButton}"
                    Background="Orange"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="20"
                    Content="Move to Next Player"
                    Width="240"
                    Height="60"
                    Command="{Binding MoveNextCommand }"
                    />
            <Button Style="{StaticResource DiceButton}"
                    Background="Orange"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    FontSize="30"
                    Content="&#xf2f9;"
                    Width="60"
                    Margin="0 30 0 50"
                    Height="60"
                    Command="{Binding RestartCommand}"
                    />
        </StackPanel>
        </Viewbox>
    </DockPanel>

</Page>
