                    BorderThickness="1"
                    Grid.Column="9"
                    Grid.Row="7"/>
            <Border Background="Green"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="8"
                    Grid.Row="7"/>
            <!--#endregion-->

            <!--#region Blue Path-->
            <Border Background="Blue"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="8"
                    Grid.Row="1"/>
            <Border Background="Blue"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="1"/>
            <Border Background="Blue"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="2"/>
